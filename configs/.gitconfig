[user]
	email = arnavanshul@gmail.com
	name = Arnav Anshul
[color]
	ui = auto
[core]
	pager = less -FMRiX
[push]
	default = simple
[alias]
	dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
	co = checkout
	b = branch
	s = status
	l = log
	com = checkout mainline
	r = reset HEAD --
	u = checkout -- .
	unstage = reset -- 
[pull]
	rebase = true
